                    <placeName xml:id="name109-6" xml:lang="syr-Syrj" source="#bib109-2">ܩܰܐܠܘܢܝܩܝ</placeName>
                    <placeName xml:id="name109-7" xml:lang="syr-Syrj" source="#bib109-2">ܪܰܩܰܗ̈</placeName>
