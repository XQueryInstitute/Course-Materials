            <listPlace>
                <place xml:id="place-94" type="settlement">
                    <placeName xml:id="name94-1" xml:lang="en" syriaca-tags="#syriaca-headword" source="#bib94-4">Ḥiṣn Manṣūr</placeName>
                    <placeName xml:id="name94-2" xml:lang="en" source="#bib94-1">Perrhe</placeName>
                    <placeName xml:id="name94-3" xml:lang="en" source="#bib94-1">Hiṣn Manṣūr</placeName>
                    <placeName xml:id="name94-4" xml:lang="en" source="#bib94-1">Adıyaman</placeName>
                    <placeName xml:id="name94-5" xml:lang="en" source="#bib94-1">Parrin</placeName>
                    <placeName xml:id="name94-6" xml:lang="syr" syriaca-tags="#syriaca-headword">ܚܣܢ ܡܢܨܘܪ</placeName>
                    <placeName xml:id="name94-7" xml:lang="syr-Syrj" source="#bib94-2">ܚܰܣܰܢ ܡܰܢܨܘܪ</placeName>
                    <placeName xml:id="name94-8" xml:lang="ar" source="#bib94-3">حصن منصور</placeName>
                    <desc xml:id="abstract-en-94" xml:lang="en">A city north of <placeName ref="http://syriaca.org/place/97">Qalʿa Rumayta</placeName> and southwest of <placeName ref="http://syriaca.org/place/136">Melitene</placeName>.</desc>
                    <desc xml:lang="syr-Syrj">
                        <quote source="#bib94-2">ܡܕܝܰܢܬܐ ܗܝ ܕܰܒܓܰܪܒܰܝ ܫܰܡܝܫܰܛ ܠܡܰܥܪܒܳܐ ܕܰܦܪܳܬ ܕܡܶܬܶܐܡܰܪ ܠܗ̇ ܬܘܒ ܐܰܕܺܝܰܐܡܰܐܢ.</quote>
                    </desc>
                    <desc xml:lang="ar">
                        <quote source="#bib94-3">بلدة شمالي سميساط في غربي الفرات يقال لها ايضاً اديمان</quote>
                    </desc>
                    <desc xml:lang="en">
                        <quote source="#bib94-4">a town north of Samosata on the west bank of the Euphrates; also called Adyaman.</quote>
                    </desc>
                    <location type="gps" source="#bib94-1">
                        <geo>37.75972 38.27875</geo>
                    </location>
                    <state type="existence" from="0072" to="2013" syriaca-computed-end="2013-01-01" syriaca-computed-start="0072-01-01">
                        <precision match="@from" notAfter="0072" syriaca-computed-end="0072-01-01"/>
                        <precision match="@to" notBefore="2013" syriaca-computed-start="2013-01-01"/>
                    </state>
                    <note type="corrigenda">In Dolabani's translation of Barsoum's description <quote xml:lang="syr-Syrj">ܡܕܝܰܢܬܐ</quote> should read <quote xml:lang="syr-Syrj">ܡܕܺܝܢܬܐ</quote>.</note>
                    <note type="disambiguation">Same location but not the same conceptual place as <idno type="URI">http://pleiades.stoa.org/places/658574</idno>.</note>
                    <idno type="URI">http://syriaca.org/place/94</idno>
                    <idno type="URI">http://pleiades.stoa.org/places/658568</idno>
                    <idno type="URI">http://en.wikipedia.org/wiki/Adıyaman</idno>
                    <idno type="URI">http://dbpedia.org/resource/Adıyaman</idno>
